<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Botón cerrar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnCerrar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_cerrar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Cerrar"
                app:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Espaciador superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name" />

        <!-- Título dinámico -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar Contraseña"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:layout_marginTop="16dp"
            android:fontFamily="serif" />

        <!-- Subtítulo dinámico -->
        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa tu correo electrónico"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- Card del formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- ========== PASO 1: CORREO ========== -->
                <LinearLayout
                    android:id="@+id/layoutPasoCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- Label Correo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Correo Electrónico"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Campo Correo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintEnabled="false"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ejemplo@correo.com"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:imeOptions="actionDone" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Enviar Código -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEnviarCodigo"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:text="Enviar Código"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary" />

                </LinearLayout>

                <!-- ========== PASO 2: TOKEN + NUEVA CONTRASEÑA ========== -->
                <LinearLayout
                    android:id="@+id/layoutPasoCambio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Label Token -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Código de Verificación"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Campo Token -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintEnabled="false"
                        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                        app:startIconTint="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etToken"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ingresa el código recibido"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:inputType="text"
                            android:maxLines="1"
                            android:imeOptions="actionNext" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Label Nueva Contraseña -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nueva Contraseña"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Campo Nueva Contraseña -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintEnabled="false"
                        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                        app:startIconTint="@color/primary"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNuevaContrasena"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ingresa tu nueva contraseña"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:imeOptions="actionNext" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Label Confirmar Contraseña -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmar Contraseña"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Campo Confirmar Contraseña -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintEnabled="false"
                        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                        app:startIconTint="@color/primary"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etConfirmarContrasena"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirma tu nueva contraseña"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:imeOptions="actionDone" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Cambiar Contraseña -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCambiarContrasena"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:text="Cambiar Contraseña"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary" />

                    <!-- Botón Volver (para reenviar código) -->
                    <TextView
                        android:id="@+id/tvReenviarCodigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="¿No recibiste el código? Reenviar"
                        android:textColor="@color/link"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground" />

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Espaciador inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</ScrollView>

