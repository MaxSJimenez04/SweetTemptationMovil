<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtVentaUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario: Juan PÃ©rez"
                android:textStyle="bold"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/txtVentaTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="$1,250.00"
                android:textColor="#FF5A8F"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txtVentaFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 05/01/2026"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/txtVentaEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completada"
                android:textSize="12sp"
                android:paddingHorizontal="8dp"
                android:background="#E8F5E9"
                android:textColor="#2E7D32"/>

            <TextView
                android:id="@+id/txtVentaTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Pedido: Normal"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>