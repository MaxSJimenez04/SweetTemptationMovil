<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layoutTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/icon_regresar"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seleccionarEstadisticasTitulo"
            android:textSize="20sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnEstadisticasVentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_efectivo_estadisticas"
        android:text="Ventas"
        android:textColor="@color/black"
        android:backgroundTint="@color/primary_light"
        android:backgroundTintMode="add"
        app:layout_constraintTop_toBottomOf="@+id/layoutTitulo"
        android:layout_marginTop="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        />
    <Button
        android:id="@+id/btnEstadisticasProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos"
        android:textColor="@color/black"
        android:drawableTop="@drawable/icon_productos_estadisticas"
        app:layout_constraintTop_toBottomOf="@+id/btnEstadisticasVentas"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/primary_light"
        />
</androidx.constraintlayout.widget.ConstraintLayout>