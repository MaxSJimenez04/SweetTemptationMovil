<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Diseña tu Pastel!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#D81B60"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="32dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPastelPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_productos"
                android:alpha="0.6"/>

            <ImageButton
                android:id="@+id/btnSubirImagen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle_background_pink"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="@color/white" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <TextView android:text="Sabor del Bizcocho" android:textColor="#D81B60" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spSabor" android:layout_width="match_parent" android:layout_height="54dp" android:background="@drawable/edittext_pink_border" android:layout_marginBottom="16dp"/>

    <TextView android:text="Relleno" android:textColor="#D81B60" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spRelleno" android:layout_width="match_parent" android:layout_height="54dp" android:background="@drawable/edittext_pink_border" android:layout_marginBottom="16dp"/>

    <TextView android:text="Cobertura" android:textColor="#D81B60" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spCobertura" android:layout_width="match_parent" android:layout_height="54dp" android:background="@drawable/edittext_pink_border" android:layout_marginBottom="16dp"/>

    <TextView android:text="Tamaño" android:textColor="#D81B60" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/spTamano" android:layout_width="match_parent" android:layout_height="54dp" android:background="@drawable/edittext_pink_border" android:layout_marginBottom="16dp"/>

    <TextView android:text="Especificaciones adicionales" android:textColor="#D81B60" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etEspecificaciones"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Cuéntanos más detalles (colores, frases, decoraciones)..."
        android:gravity="top"
        android:padding="12dp"
        android:background="@drawable/edittext_pink_border"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:inputType="textMultiLine"/>

    <ProgressBar
        android:id="@+id/pbProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="#FF69B4"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviarSolicitud"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="ENVIAR MI DISEÑO"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="32dp"
        app:backgroundTint="#FF69B4"
        app:elevation="4dp"/>

</LinearLayout>
</ScrollView>