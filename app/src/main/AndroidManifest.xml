<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_sweet_temptation_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SweetTemptation"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        >
        
        <!-- Login Activity - Pantalla inicial -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Main Activity - Pantalla principal después del login -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <!-- Cliente Activity - Pantalla para clientes -->
        <activity
            android:name=".activities.ClienteActivity"
            android:exported="false" />

        <!-- Admin Activity - Panel de administrador -->
        <activity
            android:name=".activities.AdminActivity"
            android:exported="false" />

        <!-- Usuarios Activity - Gestión de usuarios -->
        <activity
            android:name=".activities.UsuariosActivity"
            android:exported="false" />
            
    </application>

</manifest>